<div id="services" class="cards-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">{{ 'ACCOMODATIONS' | t }}</div>
                <h2>{{ entry.accomodationsTitle }}</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                {% set accomodations = craft.entries.section('accomodations').all() %}
                {% for accomodation in accomodations %}
                    <!-- Card -->
                    <div class="card">
                        <div class="card-image">
                            <img class="img-fluid" src="images/services-1.jpg" alt="alternative">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">{{ accomodation.title }}</h3>
                            {{ accomodation.description }}
                            <p class="price">{{ 'Starting at'| t }} <span>{{ accomodation.price }}</span></p>
                        </div>
                        <div class="button-container">
                            <a class="btn-solid-reg page-scroll" href="#callMe">{{ 'CONTACT' | t }}</a>
                        </div> <!-- end of button-container -->
                    </div>
                    <!-- end of card -->
                {% endfor %}
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-2 -->
