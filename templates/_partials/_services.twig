<div id="services" class="cards-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">{{ 'ACCOMODATIONS' | t }}</div>
                <h2>{{ entry.accomodationstitle }}</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                {% set accomodations = entry.accommodations.all() %}
                {% for accommodation in accomodations %}
                    <!-- Card -->
                    <div class="card">
                        <div class="card-image">
                            <img class="img-fluid" src="{{ accommodation.headerImage.one().url() }}" alt="alternative">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">{{ accommodation.title }}</h3>
                            {{ accommodation.introText }}
                            <p class="price">{{ 'Starting at'| t }} <span>{{ accommodation.price }} NOK</span></p>
                        </div>
                        <div class="button-container">
                            <a class="btn-solid-reg popup-with-move-anim"
                               href="#{{ accommodation.id }}">{{ 'DETAILS' | t }}</a>
                        </div> <!-- end of button-container -->
                    </div>
                    <!-- end of card -->
                {% endfor %}
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-2 -->

<!-- Lightbox -->
{% for accommodation in accomodations %}
    <div id="{{ accommodation.id }}" class="lightbox-basic zoom-anim-dialog mfp-hide">
        <div class="row">
            <button title="Close (Esc)" type="button" class="mfp-close x-button">Ã—</button>
            <div class="col-lg-7">
                <img class="img-fluid" src="{{ accommodation.headerImage.one().url() }}" alt="alternative">
            </div> <!-- end of col -->
            <div class="col-lg-5" style="min-height: 100%">
                <h3>{{ accommodation.title }}</h3>
                <hr class="line-heading">
                {{ accommodation.description }}
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of lightbox-basic -->
{% endfor %}
