<div id="projects" class="filter">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">{{ 'PHOTO ALBUM' | t }}</div>
                <h2>{{ entry.albumsTitle }}</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Filter -->
                <div class="button-group filters-button-group">
                    {% set categories = craft.entries.section('photoCategories').all() %}
                    <a href="javascript:void(0)" class="button is-checked" style="text-decoration: none" data-filter="*"><span>{{ 'SHOW ALL' | t }}</span></a>
                    {% for category in categories %}
                        <a href="javascript:void(0)" class="button" style="text-decoration: none" data-filter=".{{ category.slug }}"><span>{{ category.title | upper }}</span></a>
                    {% endfor %}
                </div> <!-- end of button group -->
                <div class="grid">
                    {% set photos = craft.entries.section('photos').all() %}
                    {% for photo in photos %}
                        {% set categories = photo.categories.all() %}
                        <div class="element-item {% for category in categories %}{{ category.slug }} {% endfor %}">
                            <a class="popup-with-move-anim" href="#{{ photo.slug }}">
                                <div class="element-item-overlay"><span>{{ photo.title }}</span></div>
                                <img src="{{ photo.image.one().url }}" alt="alternative">
                            </a>
                        </div>
                    {% endfor %}
                </div> <!-- end of grid -->
                <!-- end of filter -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of filter -->
<!-- end of projects -->


