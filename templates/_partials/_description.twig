<div class="cards-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {% set services = entry.services.all() %}
                {% for service in services %}
                    <!-- Card -->
                    <div class="card">
                        <span class="fa-stack">
                            <span class="hexagon"></span>
                            <i class="fas fa-{{ service.serviceIcon }} fa-stack-1x"></i>
                        </span>
                        <div class="card-body">
                            <h4 class="card-title">{{ service.title }}</h4>
                            {{ service.description }}
                        </div>
                    </div>
                    <!-- end of card -->
                {% endfor %}

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-1 -->
