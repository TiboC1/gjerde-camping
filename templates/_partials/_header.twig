<header id="header" class="header" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.35)),
        url('{{ entry.headerImage.one().url }}');">
    <div class="header-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-container">
                        <h1>{{ entry.headerTitle }}</h1>
                        <p class="p-heading p-large">{{ entry.headerIntro }}</p>
                        <a class="btn-solid-lg page-scroll" href="#intro">{{ 'DISCOVER' | t  }}</a>
                    </div>
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div> <!-- end of header-content -->
</header> <!-- end of header -->
